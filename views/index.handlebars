<div class="row">
    <center>
        <img
            src="https://cdn1.vectorstock.com/i/1000x1000/57/85/cartoon-burger-with-cheese-meat-and-salad-vector-17375785.jpg">
    </center>
</div>

<div class="row">
    <center>
        <h1>Eat-Da-Burger</h1>
    </center>
</div>


<div class="row">
    <div class="col-sm-6 col-md-5 col-lg-6">
        <ul>
            {{#each cats}}
            {{#unless sleepy}}
            {{> cats/cat-block sleep=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-sm-6 col-md-5 offset-md-2 col-lg-6 offset-lg-0">
        <ul>
            {{#each cats}}
            {{#if sleepy}}
            {{> cats/cat-block sleep=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <form class="create-form">

        <div class="form-group">
            <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Submit</button>
    </form>
</div>